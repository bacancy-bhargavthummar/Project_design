<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :book_name %>
    <%= form.text_field :book_name %>
  </div>

  <div class="field">
    <%= form.label :book_description %>
    <%= form.text_area :book_description %>
  </div>

  <div class="field">
    <%= form.label :book_author %>
    <%= form.text_field :book_author %>
  </div>

  <div class="field">
  <%= form.label :isbn %>
  <%= form.text_field :isbn %>
</div>

  <div class="field">
    <%= form.label :book_price %>
    <%= form.text_field :book_price %>
  </div>

  <div class="field">
    <%= form.label :book_qty %>
    <%= form.number_field :book_qty %>
  </div>

  <div class="field">
  <%= form.label :image %>
  <%= form.file_field :image %>
</div>

  <div class="field">
    <%= form.collection_select :category_id, Category.all,:id,:category_name, include_blank: false %>
  </div>

<br>
  <% if current_user && current_user.admin %>
    <%= link_to 'Add new category',categories_path %> 
    <% end %>
<br>
<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
