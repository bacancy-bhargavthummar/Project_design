<h1>All Users</h1>

<%= search_form_for @user, url: users_index_path do |b| %>
  <%= b.search_field :user_name_or_email_or_phone_no_cont %>
  <%= b.submit "Search" %>
  <% end %>
<br>
<table border="2">
  <thead>
    <tr>
      <th>User ID</th>
      <th>User name</th>
      <th>User email</th>
      <th>Phone no</th>
      <th>Gender</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users_result.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_no %></td>
        <td><%= user.gender %></td>
       <!-- <td><%= link_to 'Delete Profile',users_index_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
       <td><%= link_to 'Delete Profile',destroy_user_path(user), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back','/users/index' %> 
<% if current_user %>
| <%= link_to 'New Book', new_book_path %>
<% end %>
